<link
  rel="stylesheet"
  href="{{ 'collection-sort.css' | asset_url }}"
  media="all"
>

<form action="{{ _collection_url }}" class="form_wrapper">
  <label for="{{ _id }}">{{ label }} </label>
  <select name="{{ _name }}" id="{{ _id }}" onchange="this.closest('form').submit();">
    {% for item in options %}
      <option
        value="{{ item.value }}"
        {% if item.value == _sort_by %}
          selected
        {% endif %}
      >
        {{ item.name }}
      </option>
    {% endfor %}
  </select>
</form>
