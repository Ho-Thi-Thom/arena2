<link
  rel="stylesheet"
  href="{{ 'collection-sort.css' | asset_url }}"
  media="all"
>

<form class="form_wrapper" data-section-id="{{ section.id }}" id="{{_id_form}}">
  <label for="{{ _idselect }}">{{ label }} </label>
  <select
    name="{{ _name }}"
    id="{{ _id_select }}"
    onchange="{{_function}}"
    data-url="{{ collection.url }}"
  >
    {% for item in options %}
      {%- assign view = item | strip | times: 1 -%}
      {% if item.value %}
        {% comment %} sort by {% endcomment %}
        {% assign value = item.value %}
        {% assign name = item.name %}
      {% else %}
        {% comment %} show {% endcomment %}
        {% assign value = view %}
        {% assign name = view %}
      {% endif %}
      <option
        value="{{ value }}"
        {% if value == _sort %}
          selected
        {% endif %}
      >
        {{ name }}
      </option>
    {% endfor %}
  </select>
</form>

