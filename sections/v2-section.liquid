        ]
      }

    ],
    "settings": [
      {
        "type": "text",
        "id": "margin-top",
        "label": "Margin Top",
        "default": "0"
      },
      {
        "type": "text",
        "id": "margin-vertical",
        "label": "Margin Inline",
        "default": "0"
      },
      {
        "type": "select",
        "label": "Flex",
        "id": "flex",
        "options": [
          {
            "label": "Flex banner 36%/64%",
            "value": "option1"
          }, {
            "label": "Flex banner 64/36%",
            "value": "option2"
          }, {
            "label": "Flex Wrap List",
            "value": "option3"
          }, {
            "label": "Flex Slider",
