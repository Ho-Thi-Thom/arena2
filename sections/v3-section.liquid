            "default": "#000"
          }, {
            "id": "button_left",
            "type": "text",
            "label": "Button Left",
            "info": "Ex: Clothes on sale"
          }, {
            "type": "url",
            "id": "button_left_url",
            "label": "Url Button Left"
          }, {
            "id": "button_right",
            "type": "text",
            "label": "Button Right",
            "info": " Shoes on sale"
          }, {
            "type": "url",
            "id": "button_right_url",
            "label": "Url Button Right"
          }, {
            "type": "select",
            "id": "btn_style",
            "label": "Style Button",
            "options": [
              {
                "label": "Style 1",
                "value": "btn_style1"
              },
              {
                "label": "Style 2",
                "value": "btn_style2"
              },
              {
                "label": "Style 3",
                "value": "btn_style3"
              },
              {
                "label": "Style 4",
                "value": "btn_style4"
              }, {
                "label": "Style 5",
                "value": "btn_style5"
              }
            ],
            "default": "btn_style1"
          }
        ]
      }

    ],
    "settings": [
      {
        "type": "text",
        "id": "v3_margin_top",
        "label": "Margin Top",
        "default": "0,0"
      },
      {
        "type": "text",
        "id": "margin_inline",
        "label": "Margin Inline",
        "default": "0,0"
      },
      {
        "type": "header",
        "content": "Heading"
      },
      {
        "type": "checkbox",
        "id": "is_heading",
        "label": "Heading Show",
        "default": false
      }, {
        "type": "text",
        "id": "heading",
        "label": "Heading Text"
      }, {
        "type": "checkbox",
        "id": "is_slide_show",
        "label": "Slide Show",
        "default": false
      }, {
        "type": "select",
        "label": "Flex Item Style",
        "id": "flex",
        "options": [
          {
            "label": "Flex banner 36%/64%",
            "value": "option1"
          }, {
            "label": "Flex banner 64/36%",
            "value": "option2"
          }, {
            "label": "Flex Wrap List",
            "value": "option3"
          }, {
            "label": "Flex Slider",
            "value": "option4"
          }
        ],
        "default": "option1"
      }, {
        "type": "number",
        "id": "items_per_line",
        "label": "Items/line",
        "default": 3
      }, {
        "type": "text",
        "id": "item_gap",
        "label": "Item Gap: Ex: 2 -> 2px",
        "default": "0",
        "info": "distance between items"
      }, {
        "type": "select",
        "id": "content_position",
        "label": "Content Position",
        "options": [
          {
            "label": "Position 1",
            "value": "position1"
          }, {
            "label": "Position 2",
            "value": "position2"
          }, {
            "label": "Position 3",
            "value": "position3"
          }, {
            "label": "Position 4",
            "value": "position4"
          }
        ],
        "default": "position1"
      }, {
        "type": "text",
        "id": "font_size_title",
        "label": "Font Title : Mobile, Desktop",
        "default": "30,50",
        "info": "In case the following value is not entered, the font size is calculated according to mobile"
      }, {
        "type": "text",
        "id": "font_size_sub_title",
        "label": "Font Sub Title : Mobile, Desktop",
        "default": "20,18",
        "info": "In case the following value is not entered, the font size is calculated according to mobile"
      }, {
        "type": "select",
        "id": "gap_content",
        "label": "Content Gap",
        "options": [
          {
            "label": "Space 17,40",
            "value": "option1"
          }, {
            "label": "Space 12,20",
            "value": "option2"
          }, {
            "label": "Space 10,10",
            "value": "option3"
          }
        ],
        "info": "space between text and button"
      }, {
        "type": "checkbox",
        "id": "is_border_radius",
        "label": "Image Border Radius",
        "default": true
      }
    ],
    "presets": [
      {
        "name": "V3 Section"
      }
    ]
  }
{% endschema %}