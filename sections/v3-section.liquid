{% liquid
 assign title = section.settings.font_size_title
 assign title_array = title | split: "," 
 assign font_title_mobile = title_array[0] 
 assign font_title_desktop = title_array[1] 

 assign sub_title = section.settings.font_size_sub_title
 assign sub_title_array = sub_title | split: "," 
 assign font_sub_title_mobile = sub_title_array[0] 
 assign font_sub_title_desktop = sub_title_array[1] 

 assign margin_top = section.settings.v3_margin_top 
 assign margin_top_array = margin_top | split: "," 
 assign margin_top_mobile = margin_top_array[0] 
 assign margin_top_desktop = margin_top_array[1] 

 assign margin_inline = section.settings.margin_inline 
 assign margin_inline_array = margin_inline | split: "," 
 assign margin_inline_mobile = margin_inline_array[0] 
 assign margin_inline_desktop = margin_inline_array[1] 
%}
<style>
  .shopify-section-{{ section.id}}.section-container .section-container__list {
    {% case section.settings.flex %}
      {% when 'option1' %}
      grid-template-columns: 37% 63%;
      {% when 'option2' %}
      grid-template-columns: 63% 37%;
      {% when 'option3' %}
      grid-template-columns: 1fr 1fr 1fr;
      {% when 'option4' %}
      grid-template-columns: repeat({{ section.settings.items_per_line }}, 1fr);
      grid-row-gap: 0;
    {% else %}
    {% endcase %}
  }

  .shopify-section-{{ section.id}}.section-container {
    --section_margin_top_desktop: {{ margin_top_desktop | append: 'px'  }}
    ;
    --section_margin_top_mobile: {{ margin_top_mobile |append: 'px'  }}
    ;
    --margin_inline_mobile: {{ margin_inline_mobile | append: 'px'  }}
    ;
    --margin_inline_desktop: {{ margin_inline_desktop | append: 'px'  }}
    ;
    {% if section.settings.is_heading %}
      --display: {{ "flex" | escape }}
      ;
    {% else %}
      --display: {{ "none" | escape }}
      ;
    {% endif %}
    --heading_text: {{- section.settings.heading -}}
    ;
    --font_size_heading: {{ section.settings.font_heading | append: 'px'  }}
    ;
    --item_gap: {{ section.settings.item_gap |append: 'px'  }}
    ;

    --item_per_line: {{ section.settings.items_per_line }}
    ;

    {% case section.settings.content_position %}
      {% when 'position1' %}
      --left-desktop: 40px;
      --bottom-desktop: 80px;
      --left-mobile: 16px;
      --bottom-mobile: 14px;
      --position: {{ "absolute" | escape }}
      ;
      {% when 'position2' %}
      --left-desktop: 40px;
      --bottom-desktop: 111px;
      --left-mobile: 16px;
      --bottom-mobile: 61px;
      --position: {{ "absolute" | escape }}
      ;
      {% when 'position3' %}
      --content-margin-top: 20px;
      --title-wap: nowrap;
      --align_item: {{ "center" | escape }}
      ;
      --position: {{ "static" | escape }}
      ;
    {% else %}
    {% endcase %}

    --font_title_mobile: {{ font_title_mobile | append: 'px' }}
    ;
    --font_title_desktop: {{ font_title_desktop |append: 'px' | default: font_title_mobile }}
    ;
    --font_sub_title_mobile: {{ font_sub_title_mobile | append: 'px'   }}
    ;
    --font_sub_title_desktop: {{ font_sub_title_desktop | append: 'px' |default: font_sub_title_mobile }}
    ;

    {% if section.settings.is_border_radius %}
      --border_radius: {{ "4px" |escape  }}
      ;
    {% else %}
      --border_redius: {{ "0px" |escape }}
      ;
    {% endif %}

    {% case section.settings.gap_content %}
      {% when 'option1' %}
      --gap_content_mobile: 17px;
      --gap_content_desktop: 40px;
      {% when 'option2' %}
      --gap_content_mobile: 12px;
      --gap_content_desktop: 20px;
      {% when 'option3' %}
      --gap_content_mobile: 10px;
      --gap_content_desktop: 10px;
    {% else %}
    {% endcase %}
  }
</style>

<div class="shopify-section-{{ section.id}} section-container">
  <div class="section-container__heading">{{ section.settings.heading }}</div>
  <div class="section-container__list">
    {% for _block in section.blocks %}
      {% case _block.type %}
        {% when 'component_first' %}
        {% assign item = _block.settings %}
        {% assign _id = _block.id %}
        <style>
          .shopify-section-block-{{ _id}}.section-container__list__item {

            {% case item.btn_style %}
              {% when "btn_style1" %}
              {% when "btn_style2" %}
              --btn_background: white;
              --btn-border: none;
              {% when "btn_style3" %}
              --btn_padding: 0;
              --font-weight-button: 400;
              --font_button_desktop: 15px;
              --font_button_mobile: 16px;
              --btn_color: white;
              --btn-border: none;
              --text-decoration: underline;
              {% when "btn_style4" %}
              --btn_padding: 0;
              --font-weight-button: 400;
              --font_button_desktop: 15px;
              --font_button_mobile: 16px;
              --btn_color: black;
              --btn-border: none;
              --text-decoration: underline;
              {% when "btn_style5" %}
            {% else %}

            {% endcase %}

            --content_text_color: {{ item.content_text_color | escape }}
            ;
            {% assign imgDesktop = item.img_desktop %}
            {% assign imgMobile = item.img_mobile | default: imgDesktop %}

            --padding-top: {{ 1 | divided_by: imgDesktop.aspect_ratio | times: 100 | append: '%'  }}
          }

          .shopify-section-block-{{ _id}}.section-container__list__item.section-container__list__item__content__buttons {}
        </style>
        <div class="shopify-section-block-{{_id}} section-container__list__item">
          {% if imgDesktop == blank %}
            <div class="section-container__list__item__image1">
              {{ "image" | placeholder_svg_tag }}
            </div>
          {% else %}
            <div class="section-container__list__item__image1">
              <img src={{ imgDesktop | image_url}} alt="img">
            </div>
          {% endif %}
          {% if imgMobile == blank %}
            <div class="section-container__list__item__image2">

              {{ "image" | placeholder_svg_tag }}
            </div>
          {% else %}
            <div class="section-container__list__item__image2">
              <img src={{ imgMobile | image_url}} alt="img">
            </div>
          {% endif %}
          <div class="section-container__list__item__content">
            <div class="section-container__list__item__content__text">
              <h5>{{ item.title }}</h5>
              <p>{{ item.sub_title }}</p>
            </div>
            <div class="section-container__list__item__content__buttons">
              {% if item.button_left != blank %}
                <div class="section-container__list__item__content__buttons--first">
                  <a href={{ item.button_left_url }}>{{ item.button_left }}</a>
                </div>
              {% endif %}
              {% if item.button_right != blank %}
                <div class="section-container__list__item__content__buttons--second">
                  <a href={{ item.button_right_url }}>
                    {{ item.button_right }}</a>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endcase %}
    {% endfor %}
  </div>

</div>



{% schema %}
  {
    "name": "Section V3",
    "tag": "section",
    "blocks": [
      {
        "name": "Section V3",
        "type": "component_first",
        "settings": [
          {
            "type": "image_picker",
            "id": "img_desktop",
            "label": "Image Desktop:"
